{
  "permissions": {
    "allow": [
      "Bash(swift:*)",
      "Bash(xcodebuild:*)",
      "Bash(xcrun:*)",
      "Bash(open:*)",
      "Bash(swiftlint:*)",
      "Bash(swiftformat:*)",
      "Bash(git:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Read",
      "Write",
      "Edit"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "if command -v swiftlint &> /dev/null && [[ \"$CLAUDE_TOOL_ARG_PATH\" == *.swift ]]; then swiftlint lint --quiet \"$CLAUDE_TOOL_ARG_PATH\" 2>/dev/null || true; fi"
          }
        ]
      }
    ]
  },
  "env": {
    "DEVELOPER_DIR": "/Applications/Xcode.app/Contents/Developer"
  }
}